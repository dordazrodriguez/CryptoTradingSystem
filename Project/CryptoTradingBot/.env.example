# CryptoTradingBot - Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ALPACA API CONFIGURATION
# Get API keys from: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
APCA_API_KEY_ID=${ALPACA_API_KEY}
APCA_API_SECRET_KEY=${ALPACA_SECRET_KEY}
ALPACA_PAPER_TRADING=true

# SECURITY CONFIGURATION
# Generate Flask secret: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your_flask_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here
API_KEY=your_api_key_here

# DATABASE CONFIGURATION
DATABASE_URL=sqlite:///data/db/trading_bot.db
DATABASE_PATH=data/db/trading_bot.db

# FLASK APPLICATION CONFIGURATION
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# TRADING CONFIGURATION
STARTING_CASH=10000.0
TRADING_FEE_BPS=10.0
RISK_PER_TRADE=0.005

# RSI Thresholds (set to 100/0 to disable filtering)
RSI_BUY=55
RSI_SELL=45
DISABLE_RSI_FILTER=false

TREND_FOLLOWING=true

# Trading Strategy: ma_crossover, multi_indicator, decision_support
TRADING_STRATEGY=ma_crossover

PROTECT_PROFITS=true
MIN_PROFIT_TARGET=0.002

ATR_STOP_K=2.0
ATR_TRAIL_K=2.5

COOLDOWN_SEC=60
MIN_TIME_BETWEEN_OPPOSITE_TRADES=300
MIN_PRICE_MOVEMENT_PCT=0.05
SIGNAL_CONFIRMATION_COUNT=2

SELL_MODE=long_only
ALLOW_SHORTING=false
IMMEDIATE_POSITION_FLIP=false

OHLCV_LIMIT=1000
DEFAULT_SYMBOL=BTC/USD
DEFAULT_EXCHANGE=alpaca
USE_ALPACA_EXECUTOR=true

# FRONTEND CONFIGURATION
REACT_APP_API_URL=http://localhost:5000
REACT_APP_PRODUCTION_API_URL=http://your-vps-ip:5000

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log
LOG_TO_CONSOLE=true

# MONITORING CONFIGURATION
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true

# CCXT CONFIGURATION
CCXT_RATE_LIMIT=true
API_TIMEOUT=30
API_RETRY_COUNT=3

# MACHINE LEARNING CONFIGURATION
ML_PREDICTIONS_ENABLED=true
ML_MODEL_PATH=ml_models/trained_model.pkl
FEATURE_WINDOW=60

# DOCKER CONFIGURATION
CONTAINER_NAME=crypto-trading-bot
NETWORK_NAME=trading-bot-network

# VPS DEPLOYMENT CONFIGURATION
SERVER_HOST=your-vps-ip-or-domain.com
SSH_PORT=22
DEPLOY_USER=deploy
DEPLOY_PATH=/var/www/crypto-trading-bot
ENABLE_HTTPS=false
SSL_CERT_PATH=/etc/ssl/certs/trading_bot.crt
SSL_KEY_PATH=/etc/ssl/private/trading_bot.key

# NGINX CONFIGURATION
NGINX_ENABLED=true
NGINX_CONFIG_PATH=/etc/nginx/sites-available/trading_bot

# RATE LIMITING CONFIGURATION
RATE_LIMIT_PER_WINDOW=100
RATE_LIMIT_WINDOW=3600

# DEVELOPMENT/TESTING CONFIGURATION
USE_MOCK_DATA=false
MOCK_DATA_PATH=data/test_data.csv
TEST_MODE=false

# NOTIFICATION CONFIGURATION
EMAIL_NOTIFICATIONS_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=your_email@gmail.com
SMTP_TO=your_email@gmail.com
SLACK_NOTIFICATIONS_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# BACKUP CONFIGURATION
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION=7
BACKUP_DIRECTORY=backups/
